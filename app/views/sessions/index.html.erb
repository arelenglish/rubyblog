<h1>Log In</h1>

<%= form_tag login_path, :method => :post do %>
  <div class="field">
	<%= label_tag :email %>
	<%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
	<%= label_tag :password %>
	<%= password_field_tag :password, params[:password] %>
  </div>
  <div class="actions"><%= submit_tag "Log In", :class => 'btn' %></div>
<% end %>