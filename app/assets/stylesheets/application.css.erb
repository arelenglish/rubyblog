body {
	margin: 0;
	background-color: wheat;
}
a {
	text-decoration: none;
	color: white;
}
a:hover {
	color: #477ec7;
	background-color: transparent;
}
h1 {
	font-size: 6em;
	text-align: center;
	margin: 0 ;
	font-family: 'Lobster', cursive;
	padding: 0;
	color: white;
}
h2 {
	font-size: 3em;
	text-align: center;
	margin: 0 ;
	padding: 0;
	font-family: 'Open Sans', sans-serif;
	text-transform:uppercase;
	color: white;
}
h3 {
	font-size: 1.5em;
	text-align: center;
    font-style: italic;
	margin: 0 ;
	padding: 0;
	font-family: 'Open Sans', sans-serif;
	color: white;
}

img {
	max-width: 100%;
	display: block;
	margin-left: auto;
	margin-right: auto
}

#container {
	width: 100%;
	margin: 0 auto;
	position: relative;
}

#new {
	float: right;
}

#pagination {
	font-family: baskerville;
	font-size: 1.5em;
	padding: 1em 1em 1em 1em;
}
.error_messages {
	border: 1px solid;
	margin: 0.5em 0.5em;
    padding: 0 0 0 4em;
    width: 90%;	
	margin-left: auto;
	margin-right: auto;
    font: 1em verdana;
    -moz-box-shadow: 0 0 5px #888;
    -webkit-box-shadow: 0 0 5px#888;
    box-shadow: 0 0 5px #888;
    text-shadow: 2px 2px 2px #ccc;
    -webkit-border-radius: 15px;
    -moz-border-radius: 15px;
    border-radius: 15px;
	color: #D8000C;
    background: #FFBABA url(<%= asset_path 'error-cross.png' %>) no-repeat 10px center;
}

